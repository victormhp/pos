{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "args": [
            "serve",
            "--dir",
            "./db/pb_data",
            {
              "validator": "\\S+"
            }
          ],
          "name": "db/pocketbase",
          "sidecar": true
        }
      ]
    },
    "shell:allow-open"
  ]
}